<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape>
            <size
                android:height="48dp"/>
            <corners
                android:radius="24dp"/>
            <stroke
                android:color="@android:color/white"
                android:width="1dp"/>
            <solid
                android:color="@color/colorRed"/>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape>
            <size
                android:height="48dp"/>
            <corners
                android:radius="24dp"/>
            <stroke
                android:color="@android:color/white"
                android:width="1dp"/>
            <solid
                android:color="#3767ed"/>
        </shape>
    </item>
</selector>